<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:FileExplorer.ViewModels.ListView">
    <DataTemplate DataType="{x:Type ViewModels:FolderViewModel}">
        <StackPanel Orientation="Horizontal">
            <Image
                Width="20"
                Height="20"
                Source="{StaticResource Folder}">
                <Image.Style>
                    <Style BasedOn="{StaticResource {x:Type Image}}" TargetType="Image">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Folder.IsHidden}" Value="True">
                                <Setter Property="Opacity" Value="0.5" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
            <TextBlock Margin="5,0" Text="{Binding DisplayName}" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>